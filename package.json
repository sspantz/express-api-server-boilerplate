{
  "name": "express-api-server-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "validate": "npm-run-all --parallel lint test",
    "commit": "cz",
    "clean": "rimraf dist .cache",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "lint": "npm run format && eslint src/**/*js",
    "start": "babel-node src/index.js",
    "build": "babel src --out-dir dist",
    "start:build": "npm run clean && npm run build && node dist/index.js",
    "dev:build": "nodemon --ignore dist/ --exec npm run start:build",
    "dev": "nodemon --ignore dist --exec npm run start",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:all": "npm run test -- --watch --coverage",
    "ci": "rimraf node_modules && npm i && npm run build --if-present && npm run test",
    "release": "semantic-release --branches main"
  },
  "keywords": [
    "express",
    "rest",
    "api",
    "node",
    "server",
    "boilerplate"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/node": "^7.14.9",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/register": "^7.14.5",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-functional": "^3.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ghooks": "^2.0.4",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "validate-commit-msg"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
